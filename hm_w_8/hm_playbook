---
- name: build
  hosts: prod
  become: yes

  tasks:
  - name: upd java
    apt:
      name: default-jdk
      state:mc present

    - name: upd git
      apt:
        name: git
        state: present

    - name: upd maven
      apt:
        name: maven
        state: present

    - name: git clone
      git:
        repo: https://github.com/boxfuse/boxfuse-sample-java-war-hello.git
        dest: /user1/boxfuse-sample-java-war-hello/
        clone: yes

    - name build app
      shell:
       cmd: "mvn -f pom.xml package"
       chdir: /user1/boxfuse-sample-java-war-hello/

    - name: build war in master
      synchronize:
        mode: pull
        src: /user1/boxfuse-sample-java-war-hello/target/hello-1.0.war
        dest: /tmp/

- name: for web
  hosts: web
  become: yes

  tasks:
  - name: upd java
    apt:
      name: default-jdk
      state: present

  - name: to web
    apt:
      name: tomcat9
      state: present

  - name: copy to prod
    synchronize:
      mode: push
      src: /tmp/hello-1.0.war
      dest: /var/lib/tomcat9/webapps